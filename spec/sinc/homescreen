import 'package:flutter/material.dart';
import 'metric_detail_screen.dart';
import 'humidity_detail_screen.dart';
import 'light_detail_screen.dart';
import 'air_quality_detail_screen.dart';
import 'settings_screen.dart';
import 'alerts_screen.dart';
import 'status_detail_screen.dart';
import 'live_feed_screen.dart'; // Added for TCP live feed

class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  Widget buildTile(
      BuildContext context, String title, IconData icon, Widget screen, Color color) {
    return GestureDetector(
      onTap: () {
        Navigator.push(context, MaterialPageRoute(builder: (_) => screen));
      },
      child: Container(
        decoration: BoxDecoration(
          color: color.withOpacity(0.2),
          borderRadius: BorderRadius.circular(16),
          boxShadow: [
            BoxShadow(
              color: color.withOpacity(0.4),
              blurRadius: 8,
              offset: const Offset(0, 4),
            ),
          ],
        ),
        padding: const EdgeInsets.all(16),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Icon(icon, size: 40, color: color),
            const SizedBox(height: 12),
            Text(
              title,
              style: const TextStyle(
                  fontSize: 16, fontWeight: FontWeight.bold, color: Colors.black87),
              textAlign: TextAlign.center,
            ),
          ],
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text("Seed Incubation Dashboard"),
        centerTitle: true,
      ),
      body: Padding(
        padding: const EdgeInsets.all(16),
        child: GridView.count(
          crossAxisCount: 2,
          crossAxisSpacing: 16,
          mainAxisSpacing: 16,
          children: [
            buildTile(
              context,
              "Temperature",
              Icons.thermostat,
              MetricDetailScreen(
                metricName: "Temperature",
                currentValue: 25.5,
                recentValues: [22, 23, 24, 25, 26, 25.5],
              ),
              Colors.red,
            ),
            buildTile(
              context,
              "Humidity",
              Icons.water_drop,
              HumidityDetailScreen(
                currentHumidity: 55.0,
                recentValues: [50, 52, 53, 55, 56, 55],
              ),
              Colors.blue,
            ),
            buildTile(
              context,
              "Light Level",
              Icons.light_mode,
              LightDetailScreen(
                currentLight: 300,
                recentValues: [250, 280, 290, 300, 310, 300],
              ),
              Colors.orange,
            ),
            buildTile(
              context,
              "Air Quality",
              Icons.air,
              AirQualityDetailScreen(
                currentAirQuality: 85,
                recentValues: [80, 82, 84, 85, 86, 85],
              ),
              Colors.green,
            ),
            buildTile(
              context,
              "Settings",
              Icons.settings,
              SettingsScreen(),
              Colors.purple,
            ),
            buildTile(
              context,
              "Alerts",
              Icons.notification_important,
              AlertsScreen(),
              Colors.redAccent,
            ),
            buildTile(
              context,
              "Status",
              Icons.wifi,
              StatusDetailScreen(
                status: true,
                activeColor: Colors.green,
              ),
              Colors.blueAccent,
            ),
            buildTile(
              context,
              "Live Feed",
              Icons.videocam,
              const LiveFeedScreen(), // TCP live feed screen
              Colors.teal,
            ),
          ],
        ),
      ),
    );
  }
}
